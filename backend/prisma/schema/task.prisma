model Task {
    id          String    @id @default(uuid())
    userId      String
    title       String
    description String?
    status      String    @default("pending")
    dueDate     DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    user        User      @relation(fields: [userId], references: [id])

    @@map("tasks")
}
